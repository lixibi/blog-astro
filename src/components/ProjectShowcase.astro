---
import { Icon } from "astro-icon/components";

// 项目配置 - 我的开源项目
const projects = [
	{
		title: "SafeDEL",
		description: "多线程快速文件安全删除工具，高性能防止意外删除重要文件",
		url: "https://github.com/lixibi/SafeDEL"
	},
	{
		title: "CloudPaste",
		description: "云端剪贴板同步工具，多设备间快速共享文本",
		url: "https://github.com/lixibi/CloudPaste"
	},
	{
		title: "Browser-Use",
		description: "浏览器自动化客户端，提升网页操作效率",
		url: "https://github.com/lixibi/browser-use"
	},
	{
		title: "English Phrase Cards",
		description: "英语短语卡片学习工具，轻松记忆常用表达",
		url: "https://github.com/lixibi/english-phrase-cards"
	},
	{
		title: "Prose Polish",
		description: "文本优化工具，提升写作质量和表达效果",
		url: "https://github.com/lixibi/prose-polish"
	},
	{
		title: "Blog Astro",
		description: "基于Astro的现代化博客主题，简洁高效",
		url: "https://github.com/lixibi/blog-astro"
	}
];

// 运营项目
const commercialProjects = [
	{
		title: "WenJianQun.com",
		description: "文件群管理助手",
		url: "https://WenJianQun.com"
	},
	{
		title: "AiPageGen.com",
		description: "ai 电商设计工具",
		url: "https://AiPageGen.com"
	}
];
---

<section class="mb-8">
	<!-- 开源项目 -->
	<h2 class="title mb-6 text-xl text-accent">开源项目</h2>
	<ul class="space-y-4 mb-8" role="list">
		{projects.map((project) => (
			<li class="grid gap-2 sm:grid-cols-[auto_1fr] xl:gap-4 2xl:gap-6">
				<div class="grid gap-2 sm:grid-cols-[auto_1fr] sm:[&_q]:col-start-2">
					<a 
						href={project.url}
						target="_blank"
						rel="noopener noreferrer"
						class="hanbayu-link-hover font-semibold hover:underline underline-offset-4"
					>
						{project.title}
					</a>
					<p class="text-textColor/75 text-sm">{project.description}</p>
				</div>
			</li>
		))}
	</ul>

	<!-- 运营项目 -->
	<h2 class="title mb-6 text-xl text-accent">运营项目</h2>
	<ul class="space-y-4" role="list">
		{commercialProjects.map((project) => (
			<li class="grid gap-2 sm:grid-cols-[auto_1fr] xl:gap-4 2xl:gap-6">
				<div class="grid gap-2 sm:grid-cols-[auto_1fr] sm:[&_q]:col-start-2">
					<a 
						href={project.url}
						target="_blank"
						rel="noopener noreferrer"
						class="hanbayu-link-hover font-semibold hover:underline underline-offset-4"
					>
						{project.title}
					</a>
					<p class="text-textColor/75 text-sm">{project.description}</p>
				</div>
			</li>
		))}
	</ul>
</section>

