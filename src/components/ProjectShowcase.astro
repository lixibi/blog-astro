---
import { Icon } from "astro-icon/components";

// 项目配置 - 我的开源项目
const projects = [
	{
		title: "SafeDEL",
		icon: "mdi:delete-variant",
		description: "安全删除工具，防止意外删除重要文件",
		url: "https://github.com/lixibi/SafeDEL"
	},
	{
		title: "CloudPaste",
		icon: "mdi:cloud-upload",
		description: "云端剪贴板同步工具，多设备间快速共享文本",
		url: "https://github.com/lixibi/CloudPaste"
	},
	{
		title: "Browser-Use",
		icon: "mdi:web",
		description: "浏览器自动化客户端，提升网页操作效率",
		url: "https://github.com/lixibi/browser-use"
	},
	{
		title: "English Phrase Cards",
		icon: "mdi:cards-variant",
		description: "英语短语卡片学习工具，轻松记忆常用表达",
		url: "https://github.com/lixibi/english-phrase-cards"
	},
	{
		title: "Prose Polish",
		icon: "mdi:format-text",
		description: "文本优化工具，提升写作质量和表达效果",
		url: "https://github.com/lixibi/prose-polish"
	},
	{
		title: "Blog Astro",
		icon: "mdi:newspaper-variant",
		description: "基于Astro的现代化博客主题，简洁高效",
		url: "https://github.com/lixibi/blog-astro"
	}
];
---

<section class="mb-8">
	<!-- 项目标题 - 简洁风格 -->
	<h2 class="title mb-6 text-xl text-accent">开源项目</h2>

	<!-- 项目网格布局 - 宽屏优化：更灵活的列数 -->
	<div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-6">
		{projects.map((project) => (
			<!-- 项目卡片 - 默认暗色，悬停变亮 -->
			<div class="hanbayu-card p-4 group transition-transform hover:scale-105">
				<!-- 项目图标 -->
				<div class="mb-3 flex justify-center">
					<div class="rounded-full bg-bg-muted border border-border-subtle p-3 shadow-sm">
						<Icon name={project.icon} class="h-6 w-6 text-accent" />
					</div>
				</div>

				<!-- 项目标题 -->
				<h3 class="text-base font-semibold text-accent-2 mb-2 text-center">
					{project.title}
				</h3>

				<!-- 项目描述 -->
				<p class="text-sm text-text-muted mb-3 text-center leading-relaxed">
					{project.description}
				</p>

				<!-- 项目链接 -->
				<div class="text-center">
					<a
						href={project.url}
						target="_blank"
						rel="noopener noreferrer"
						class="hanbayu-link-hover text-sm hover:underline inline-flex items-center"
					>
						查看项目
						<Icon name="mdi:external-link" class="ml-1 h-3 w-3" />
					</a>
				</div>
			</div>
		))}
	</div>
</section>

