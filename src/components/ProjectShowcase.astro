---
import { Icon } from "astro-icon/components";

// 项目配置 - 我的开源项目
const projects = [
	{
		title: "SafeDEL",
		description: "C# 安全文件删除库，支持 DoD 5220.22-M 和 Gutmann 多重覆写标准",
		url: "https://github.com/lixibi/safedel"
	},
	{
		title: "HebeCrawl",
		description: "Python 网页抓取与 AI 智能解析工具，支持多模态内容处理",
		url: "https://github.com/lixibi/HebeCrawl"
	},
	{
		title: "Browser-Use",
		description: "AI 驱动的浏览器自动化框架，让网站对 AI 代理可访问",
		url: "https://github.com/lixibi/browser-use"
	},
	{
		title: "AiPageGen",
		description: "TypeScript AI 页面生成器，电商设计自动化工具",
		url: "https://github.com/lixibi/aipagegen"
	},
	{
		title: "Blog Astro",
		description: "基于 Astro 的现代化博客系统，本站点的程序源码",
		url: "https://github.com/lixibi/blog-astro"
	}
];

// 运营项目
const commercialProjects = [
	{
		title: "WenJianQun.com",
		description: "文件群管理助手",
		url: "https://WenJianQun.com"
	},
	{
		title: "AiPageGen.com",
		description: "ai 电商设计工具",
		url: "https://AiPageGen.com"
	}
];
---

<section class="mb-8">
	<!-- 开源项目 -->
	<h2 class="title mb-6 text-xl text-accent">开源项目</h2>
	<ul class="space-y-4 mb-8" role="list">
		{projects.map((project) => (
			<li class="grid gap-2 sm:grid-cols-[auto_1fr] xl:gap-4 2xl:gap-6">
				<div class="grid gap-2 sm:grid-cols-[auto_1fr] sm:[&_q]:col-start-2">
					<a 
						href={project.url}
						target="_blank"
						rel="noopener noreferrer"
						class="hanbayu-link-hover font-semibold hover:underline underline-offset-4"
					>
						{project.title}
					</a>
					<p class="text-textColor/75 text-sm">{project.description}</p>
				</div>
			</li>
		))}
	</ul>

	<!-- 运营项目 -->
	<h2 class="title mb-6 text-xl text-accent">运营项目</h2>
	<ul class="space-y-4" role="list">
		{commercialProjects.map((project) => (
			<li class="grid gap-2 sm:grid-cols-[auto_1fr] xl:gap-4 2xl:gap-6">
				<div class="grid gap-2 sm:grid-cols-[auto_1fr] sm:[&_q]:col-start-2">
					<a 
						href={project.url}
						target="_blank"
						rel="noopener noreferrer"
						class="hanbayu-link-hover font-semibold hover:underline underline-offset-4"
					>
						{project.title}
					</a>
					<p class="text-textColor/75 text-sm">{project.description}</p>
				</div>
			</li>
		))}
	</ul>
</section>

