{
  "buildCommand": "astro build && npx pagefind --site dist --output-path dist/pagefind --exclude-selectors=\"nav,footer,header,.toc\" --force-language=\"zh\"",
  "rewrites": [
    {
      "source": "/admin",
      "destination": "/admin/"
    }
  ],
  "headers": [
    {
      "source": "/admin/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/pagefind/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}